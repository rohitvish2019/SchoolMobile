<body>
    <div class="header-container">
        <%- include('_header'); %>
    </div>
    <div class="body-container">
        
        <div class="center-body">
            <h1>Transaction Report</h1>
            <figure id="loader">
                <div class="dot white"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
            </figure>
    
            <!-- Filter form -->
            <div class="filter-container">
                <select name="purpose" id="purpose" class="filter-input">
                    <option value="feesReport">Fees Submission Report</option>
                    <option value="admittedStudents">Admitted Students</option>
                    <option value="usersCollection" disabled>Collection report by users</option>
                    <option value="currentActiveStudents" >Active Students report</option>
                    <option value="feesDuesClass" disabled>Fees Dues(By Class)</option>
                    <option value="feesDuesTotal" >Fees Dues(Total)</option>
                    <option value="incompleteResult" >Incomplete Result</option>
                </select>
                <div class="filter-input">
                    <label for="email" id="email-label">User</label>
                    <input type="text" name="email" id="email">
                </div>
                <div class="filter-input">
                    <div style="display: inline;">
                        <label id="start-date-label" style="display:inline;">Start Date</label>
                        <input type="text" value="20-09-2023" id="start-date" name="start-date" pattern="\d{2}-\d{2}-\d{4}" placeholder="DD-MM-YYYY" required>
                    </div>
                    
                    <div style="display:inline;">
                        <label id="end-date-label" style="display:inline;">End Date</label>
                        <input type="text" value="03-11-2023" id="end-date" name="end-date" pattern="\d{2}-\d{2}-\d{4}" placeholder="DD-MM-YYYY" required>
                    </div>
                </div>
                
                <div class="filter-input mob-button">
                    <button style="margin-right: 5%;" class="action-button" onclick="filterTransactions()">Filter</button>
                    <input class="action-button" id="getExcel" type="button" value="Get in excel">
                </div>
                
            </div>
            <div class="table-container">
                <table id="table-body">
                    <thead>
                        <tr>
                            
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample transaction rows; replace with your actual data -->
                        
                        <!-- Add more rows as needed -->
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>
    <div class="footer-container">
        <b><label for="" id="count">Total Fees received : </label><span id="total"></span></b>
        
    </div>
</body>
